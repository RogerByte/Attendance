<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<fx:root type="javafx.scene.layout.AnchorPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <StackPane blendMode="MULTIPLY" layoutY="-1.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label text="Control de Incidencias" textFill="#008287" wrapText="true" StackPane.alignment="TOP_LEFT">
               <font>
                  <Font name="Segoe UI Semilight" size="20.0" />
               </font>
               <StackPane.margin>
                  <Insets left="10.0" top="10.0" />
               </StackPane.margin>
            </Label>
            <Line endX="200.0" stroke="#008287" strokeWidth="1.5" StackPane.alignment="TOP_LEFT">
               <StackPane.margin>
                  <Insets left="10.0" top="38.0" />
               </StackPane.margin>
            </Line>
            <VBox spacing="10.0">
               <children>
                  <HBox alignment="CENTER_RIGHT" spacing="10.0">
                     <children>
                        <Label text="Fecha Inicio: " />
                        <DatePicker fx:id="dtpkFechaInicio" />
                        <Label text="Fecha Fin:" />
                        <DatePicker fx:id="dtpkFechaFinal" />
                        <Label text="Número de Empleado:" />
                        <TextField fx:id="txtNumEmpleadoIncidencias" onAction="#txtNumEmpleadoIncidencias_OnAction" />
                        <Button fx:id="btnBuscar" mnemonicParsing="false" onAction="#btnBuscar_OnAction">
                           <graphic>
                              <ImageView fitHeight="15.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../common/Images/search.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </Button>
                     </children>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </HBox>
                  <HBox alignment="CENTER_RIGHT" spacing="10.0">
                     <children>
                        <Button fx:id="btnExcel" defaultButton="true" mnemonicParsing="false" onAction="#btnExcel_OnAction" text="Exportar Excel" textFill="WHITE" />
                        <Button fx:id="btnActualizaInformacion" mnemonicParsing="false" onAction="#btnActualizaInformacion_OnAction" text="Actualizar Información" />
                        <Button fx:id="Configuracion" mnemonicParsing="false" onAction="#Configuracion_OnAction" text="Configuración" />
                     </children>
                  </HBox>
               </children>
               <StackPane.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="50.0" />
               </StackPane.margin>
            </VBox>
            <TableView fx:id="GridIncidencias">
              <columns>
                  <TableColumn fx:id="tcDetail" editable="false" prefWidth="25.0" resizable="false" sortable="false" />
                  <TableColumn fx:id="tcRetardos" prefWidth="25.0" resizable="false" />
                <TableColumn fx:id="tcNumeroEmpleado" editable="false" prefWidth="95.0" text="N. Empleado" />
                <TableColumn fx:id="tcNombreEmpleado" editable="false" prefWidth="236.0" text="Nombre Empleado" />
                  <TableColumn fx:id="tcCompania" editable="false" prefWidth="195.0" text="Compañía" />
                  <TableColumn fx:id="tcNomina" prefWidth="153.0" text="Nómina" />
                  <TableColumn fx:id="tcFaltas" prefWidth="91.0" text="N. Faltas" />
              </columns>
               <cursor>
                  <Cursor fx:constant="DEFAULT" />
               </cursor>
               <StackPane.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="120.0" />
               </StackPane.margin>
            </TableView>
         </children>
      </StackPane>
   </children>
</fx:root>
